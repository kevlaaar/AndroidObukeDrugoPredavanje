<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <View
        android:id="@+id/firstSquareView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#123"
        android:tag="1"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/secondSquareView"
        />

    <View
        android:id="@+id/secondSquareView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#123"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:tag="2"
        app:layout_constraintTop_toTopOf="@id/firstSquareView"
        app:layout_constraintStart_toEndOf="@id/firstSquareView"
        app:layout_constraintEnd_toStartOf="@id/thirdSquareView"/>

    <View
        android:id="@+id/thirdSquareView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#123"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:tag="3"
        app:layout_constraintTop_toTopOf="@id/firstSquareView"        app:layout_constraintEnd_toStartOf="@id/fourthSquareView"
        app:layout_constraintStart_toEndOf="@id/secondSquareView"
        />

    <View
        android:id="@+id/fourthSquareView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#123"
        android:layout_marginStart="15dp"
        android:tag="4"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/firstSquareView"        app:layout_constraintStart_toEndOf="@id/thirdSquareView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/squareTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="SQUARE TEXT VIEW"
        android:textColor="#123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>